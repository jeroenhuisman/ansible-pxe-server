$ORIGIN {{ domain_name }}.
$TTL 1D
@	IN SOA	{{ domain_name }}. root (
					0	; serial
					1D	; refresh
					1H	; retry
					1W	; expire
					3H )	; minimum
		IN NS {{ ansible_hostname }}

{{ ansible_hostname }}		IN A	{{ ansible_default_ipv4 }}
{% if ansible_nodes is defined %}
{% for node in ansible_nodes %}
{{ item.name }}	IN A	{{ item.ip }}
{% endfor %}

